{
  "version": "v2",
  "max_retries": 1,
  "pipeline": [
    "01_director",
    "02_psicoeducador",
    "03_cuentacuentos",
    "04_editor_claridad",
    "05_ritmo_rima",
    "06_continuidad",
    "07_diseno_escena",
    "08_direccion_arte",
    "09_sensibilidad",
    "10_portadista",
    "11_loader",
    "12_validador"
  ],
  "parallel_execution": true,
  "parallel_groups": [
    ["07_diseno_escena", "08_direccion_arte", "10_portadista"]
  ],
  "optimizations": {
    "enable_caching": true,
    "streaming": false,
    "timeout": 900
  },
  "mode_verificador_qa": false,
  "mode_verificador_qa_note": "false = autoevaluación (más rápido), true = verificador QA estricto (más lento pero más riguroso)",
  "agent_toggles": {
    "01_director": true,
    "02_psicoeducador": true,
    "03_cuentacuentos": true,
    "04_editor_claridad": false,
    "05_ritmo_rima": false,
    "06_continuidad": false,
    "07_diseno_escena": true,
    "08_direccion_arte": true,
    "09_sensibilidad": true,
    "10_portadista": true,
    "11_loader": true,
    "12_validador": true
  },
  "agent_toggles_note": "Establece false para saltar un agente. El sistema manejará las dependencias automáticamente."
}